-var itemSide = ["Наличие в магазинах","Бренды","Цена","Цвет","Операционные системы"]

-var itemNav = ["Планшеты","Мобильные телефоны","Mp3 плееры","Персоональные комптютеры","Ноутбуки","Аксессуары","Бытовая техника"]

-var brands = ["Lenovo","Apple","Samsung","Asus","Motorola"]
-var OS = ["Android","IOS","WindowsMobile","Symbian","Custom"]


mixin topnavigation(items)
	ul.main-navlist
		each item in items
			if	(item == "Мобильные телефоны" )
				li.nav-list__item.action: a.nav-list__item__link(href="#") #{item}
			else
				li.nav-list__item: a.nav-list__item__link(href="#") #{item}


mixin brandslist(items)
	ul.brands-list
		each item in items
			li.brands__item
				input.brand-chkbx(type="checkbox" value="#{item}" id="brand#{item}")
				label.brand-lbl(for="brand#{item}") 
					.brand__custom-chkbx.aside-brand-box
					.brand__custom-lbl #{item}

mixin opersystemlist(items)
	ul.os-list
		each item in items
			li.os-list__item
				input.os-item-chkbx(type="checkbox" value="#{item}" id="os#{item}")
				label.os-item-lbl(for="os#{item}") 
					.os-item-chkbx.aside-brand-box
					.os-item-lbl #{item}


.main-nav-wrapper
	+ topnavigation(itemNav)
.main-content
	.Breadcrumb
		.crumb__item.level1
			a.crumb__link(href="#") Главная
		.crumb__item.level2
			a.crumb__link.active(href="#") Каталог
	h1.content__title Мобильные телефоны
	.main-content__wrap
		.wrap-aside  
			.aside-typegoods
				.typegoods__item
					a.typegoods__link(href="#") Флагманы
				.typegoods__item
					a.typegoods__link.lnk-active(href="#") Бюджетная линейка
			ul.asidebar-list
				li.sidebar-item.exist-goods
					h3.sidebar__item__titile 
						a.sidebar__title__link(href="#") Наличие в магазинах
					.sidebar-item__content
						ul.exist__list
							li.exist__item
								input.exist__item__input(type="radio" name="exist" value="all" id="all") 						
								label.exist__item__label(for="all") 
									.exist__custom-btn-active
									.exist__custom-lbl Во всех магазинах									
							li.exist__item
								input.exist__item__input(type="radio" name="exist" value="near" id="near")
								label.exist__item__label(for="near") 
									.exist__custom-btn
									.exist__custom-lbl В ближайшем ко мне магазине
				li.sidebar-item.brands
					h3.sidebar__item__titile 
						a.sidebar__title__link(href="#") Бренды
					.sidebar-item__content
						+brandslist(brands)
						.brands__resetfilter
							a.resetfilter__link(href="#") Сбросить фильтр
				li.sidebar-item.price
					h3.sidebar__item__titile 
						a.sidebar__title__link(href="#") Цена
					.sidebar-item__content
						label.price__lbl-from(for="pricefrom") От
						input.price__inpt-from(type="text" id="pricefrom")
						label.price__lbl-to(for="priceto") до
						input.price__inpt-to(type="text" id="priceto")
				li.sidebar-item.price
					h3.sidebar__item__titile 
						a.sidebar__title__link(href="#") Цвет
					.sidebar-item__content
				li.sidebar-item.price
					h3.sidebar__item__titile 
						a.sidebar__title__link(href="#") Операционная система
					.sidebar-item__content
						+opersystemlist(OS)





		.body_content
			header.content-nav-bar
			.main-content
		.important-info
			h1.important-info_title Важная информация
			.important-info_content


